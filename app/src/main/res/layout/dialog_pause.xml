<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_mute"
        android:layout_width="24dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="48dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="onMuteClicked"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_go_back_to_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_mute"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/press_start_2p_font"
        android:padding="12dp"
        android:text="Go Back to Menu"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_go_back_to_menu"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/press_start_2p_font"
        android:padding="12dp"
        android:text="Close"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>
